{
  "name": "winescope-monorepo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules .turbo dist",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:up:dev": "docker compose --profile development up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v && docker rmi winescope-monorepo-api winescope-monorepo-crawler 2>/dev/null || true"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.6.0"
  }
}